<!DOCTYPE html>
<html>
<head>
  <title>Odnogrupniki</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid my-style-content">
  <div class="container col-xs-12">
    <header class="col-xs-12">
      <nav class="navbar navbar-inverse">
        <div class="container">
          <div class="navbar-header">
            <%= link_to 'Rails simple Auth', '#', class: 'navbar-brand' %>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Home', root_path %></li>
              <%if current_user%>
                <li><%= link_to full_name, current_user %></li>
                <li><%= image_tag current_user.avatar.url(:small) %></li>
                <li><%= link_to 'Log out', session_path("current"), method: "delete" %></li>
              <% else %>
                <li><%= link_to 'Sign up', new_user_path %></li>
                <li><%= link_to 'Log In', new_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="container">
      <aside class="col-xs-2">
      
      </aside>
      <content class="col-xs-8">
      <dir class="col-xs-12">
      <div class="col-xs-12">
      <% flash.each do |type, msg| %>
      <div class="alert alert-<%= type %>"><%= msg %></div>
      <% end %>
      <%= yield %>
      </div>
      </dir>
      </content>
      <aside class="col-xs-2">
      
      </aside>
    </div>
    <footer>
    </footer>
  </div>
</div>

</body>
</html>
