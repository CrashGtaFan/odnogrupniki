<%= form_for @note, class: 'form' do |f| %>
 
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@note.errors.count, "error") %> prohibited
        this note from being saved:
      </h2>
      <ul>
        <% @note.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %> 
    <%= f.text_field :title, class: 'form-control' %>
  </p>
 
  <p>
    <%= f.label :body %> 
    <%= f.text_area :body, rows: '6', class: 'form-control ' %>
  </p>
 
  <p>
    <%= f.label :image %> 
    <%= f.file_field :image %>
  </p>

  <p>
    <div>
      <%= f.submit 'Create article', class: 'btn btn-success' %>  
    </div> 
  </p>
 
<% end %>